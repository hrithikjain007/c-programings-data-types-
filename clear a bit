#include<stdio.h>
void main()
{
   unsigned	int a,b,c,d,i,n;
   printf("\nenter the number\n");
   scanf("%d",&a);
   printf("\nenter position\n");
   scanf("%d",&n);
   for(i=31;i!=-1;i--)
	   printf("%d",a>>i&1);
   printf("\n");
    b=a&(~(1<<n));

   for(i=31;i!=-1;i--)
	   printf("%d",b>>i&1);

}
